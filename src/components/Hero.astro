---
// Importando los componentes
import Card from "./Card.astro";
import Experiencia from "./Experiencia.astro";
import Tecnologias from "./Tecnologias.astro";
import Contacto from "./Contacto.astro";

// Importando los scripts
import Scripts from "./Scripts.astro";

// Importando la data del Json
import dataCards from "../config/dataCards.json";
import dataExperiencia from "../config/dataExperiencia.json";
import dataTecnologias from "../config/dataTecnologias.json";
---

<Scripts />
<div class="container-fluid pt-3 pb-3" id="hero">
    <div class="container">
        <div class="row">
            <!-- Columna izquierda con contenido -->
            <div class="col-md-6 pt-3 pb-3">
                <!-- Imagen del desarrollador -->
                <img
                    src="/imgs/avatar.png"
                    alt="Avatar"
                    class="img-fluid mb-3"
                    width="250"
                />

                <!-- Título de la Sección -->
                <h2>
                    Mi Trayectoria como Desarrollador <span>Front-End</span>
                </h2>

                <!-- Descripción personal -->
                <p>
                    Soy un apasionado desarrollador front-end con experiencia en
                    la creación de interfaces web atractivas y funcionales. Me
                    esfuerzo por combinar diseño y desarrollo para ofrecer
                    experiencias de usuario excepcionales.
                </p>

                <!-- Iconos de redes sociales -->
                <div class="social-icons">
                    <a href="#" target="_blank"
                        ><i class="fab fa-facebook"></i></a
                    >
                    <a href="#" target="_blank"
                        ><i class="fab fa-instagram"></i></a
                    >
                </div>

                <!-- Botones con iconos a la izquierda -->
                <button class="btn btn-outline-warning mt-3"
                    ><i class="fas fa-code"></i> Proyectos</button
                >
                <a
                    target="_blank"
                    href="https://drive.google.com/file/d/1ub9HSMrnG6t4BfDUYUnHGKK-eV6sLJuu/view?usp=drive_link"
                    class="btn btn-outline-warning mt-3"
                    ><i class="fas fa-file"></i> Descargar CV</a
                >
            </div>

            <!-- Columna derecha con menú de pestañas (tabs) -->
            <div class="col-md-6 pt-3 pb-3">
                <!-- Menú de pestañas -->
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a
                            class="nav-link active"
                            id="tab1"
                            data-bs-toggle="tab"
                            href="#contenido1">Experiencia</a
                        >
                    </li>
                    <li class="nav-item">
                        <a
                            class="nav-link"
                            id="tab2"
                            data-bs-toggle="tab"
                            href="#contenido2"
                            >Páginas Web
                        </a>
                    </li>
                    <li class="nav-item">
                        <a
                            class="nav-link"
                            id="tab3"
                            data-bs-toggle="tab"
                            href="#contenido3"
                            >Habilidades
                        </a>
                    </li>
                    <li class="nav-item">
                        <a
                            class="nav-link"
                            id="tab4"
                            data-bs-toggle="tab"
                            href="#contenido4"
                            >Contacto
                        </a>
                    </li>
                </ul>

                <!-- Contenido de las pestañas -->
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="contenido1">
                        <!-- Contenido de la pestaña de  -->
                        <div class="row mt-3">
                            {
                                dataExperiencia.exp.map((exps, index) => (
                                    <Experiencia
                                        titulo={exps.titulo}
                                        fecha={exps.fecha}
                                        parrafo={exps.parrafo}
                                    />
                                ))
                            }
                        </div>
                    </div>

                    <div class="tab-pane fade" id="contenido2">
                        <!-- Contenido de la pestaña de proyectos -->
                        <div class="row mt-3">
                            {
                                dataCards.cards.map((card, index) => (
                                    <Card
                                        imagen={card.imagen}
                                        href={card.href}
                                        titulo={card.titulo}
                                        tecnologias={card.tecnologias}
                                    />
                                ))
                            }
                        </div>
                    </div>

                    <div class="tab-pane fade" id="contenido3">
                        <!-- Contenido de la pestaña de habilidades -->
                        <div class="tecnologia-container">
                            {
                                dataTecnologias.tecnologias.map(
                                    (tec, index) => (
                                        <Tecnologias
                                            color={tec.color}
                                            nombre={tec.nombre}
                                            icono={tec.icono}
                                        />
                                    )
                                )
                            }
                        </div>
                    </div>

                    <div class="tab-pane fade" id="contenido4">
                        <!-- Contenido de la pestaña de habilidades -->
                        <div class="row mt-3">
                            <Contacto />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    #hero {
        background: linear-gradient(to right, #110c24, #2f2953, #03002c);

        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    span {
        color: #ce7a1c;
    }

    .fas {
        margin-right: 8px;
    }

    .fa-facebook,
    .fa-instagram {
        font-size: 2rem;
        margin-right: 10px;
    }

    .btn {
        margin-top: 10px;
    }

    /* Estilos para las tabs */
    .nav-tabs {
        border-bottom: none; /* Borde inferior */
        margin-bottom: 15px; /* Espaciado inferior */
    }

    .nav-link {
        color: #28234D; /* Color del texto normal */
        background-color: transparent; /* Color de fondo de las tabs */
        border: 1px solid #FFC107;
        border-radius: 5px;
        margin: 5px;
        color: #FFC107;
        transition: all ease-in-out 200ms;
        &:hover{
            background-color: #FFC107;
            border: 1px solid #FFC107;
            color: #110c24;
        }
    }

    .nav-link.active {
        color: #ffffff; /* Color del texto cuando la tab está activa */
        background-color: #3d3769; /* Color de fondo cuando la tab está activa */
        border-color: #3d3769; /* Borde cuando la tab está activa */
    }
</style>
