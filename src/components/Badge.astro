---
import Scripts from "./Scripts.astro";

// Badge.astro
interface Props {
    nombre: string;
    icono: string;
    color: string;
}

const astroProps = Astro.props as Props;
const { nombre, icono, color } = astroProps;
---
<Scripts></Scripts>
<span class={`badge ${color} text-light`}>
    <i class={icono}></i>
    {nombre}
</span>

<style>
    .bg-html {
        background-color: #e34f26;
    }

    .bg-css {
        background-color: #267fe4;
    }

    .bg-js {
        background-color: #f0db24ec;
    }

    .bg-bootstrap {
        background-color: #9a3cf3;
    }

    .bg-astro {
        background-color: #e32665;
    }
</style>
